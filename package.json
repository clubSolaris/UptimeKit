{
  "name": "uptimekit",
  "version": "1.0.0",
  "description": "Real-time website uptime monitoring dashboard with beautiful charts and instant status updates",
  "private": false,
  "author": "Abhi",
  "license": "MIT",
  "keywords": [
    "uptime",
    "monitoring",
    "dashboard",
    "website-monitor",
    "performance",
    "analytics",
    "real-time"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/abhixdd/UptimeKit.git",
    "homepage": "https://github.com/abhixdd/UptimeKit"
  },
  "bugs": {
    "url": "https://github.com/abhixdd/UptimeKit/issues"
  },
  "scripts": {
    "install:all": "npm install && npm --prefix backend install && npm --prefix frontend install",
    "dev:backend": "cd backend && node server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
    "start": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
